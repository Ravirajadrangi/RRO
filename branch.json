{
    "version": 1.0,
    "ci": {
        "alias": {
            "linux": [
                "centos7"
            ]
        },
        "gates": {
            "checkin": [
                "build"
            ],
            "rolling": [
                "build"
            ]
        },
        "workflow": {
            "build": {
                "nodes": {
                    "linux": [
                        {
                            "cmd": "bash ./docker-build.sh",
                            "archiveList": [
                            ],
                            "recycle": false
                        },
                        {
                            "cmd": "bash ./test/runAllTests.sh",
                            "archiveList": [
                                "**/r-*.tar.gz",
                                "**/*.html",
                                "**/*.txt",
                                "**/*.log"
                            ],
                            "recycle": false
                        }
                    ],
                    "vs2015": [
                        {
                            "cmd": "powerShell.exe -ExecutionPolicy Bypass -file build.ps1",
                            "archiveList": [
                                "**/*"
                            ],
                            "recycle": false
                        },
                        {
                            "cmd": "bash ./test/runAllTests.sh",
                            "archiveList": [
                                "**/*.html",
                                "**/*.txt",
                                "**/*.log"
                            ],
                            "recycle": false
                        }
                    ]
                }
            }
		}
    }
}
